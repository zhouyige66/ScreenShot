<resources>

    <style name="Activity_NoActionBar_NoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/StyleActivityAnim</item>
    </style>

    <style name="StyleActivityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/anim_activity_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_activity_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_activity_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_activity_exit</item>
    </style>

</resources>
